<Window x:Class="OOPWeek6.LoginScreen"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPWeek6"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" FontSize="14">
    <StackPanel Margin="20">
        <Label Content="Login" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Username"/>
        <TextBox Name="txtUsername" FontSize="18" TextChanged="txtUsername_TextChanged"></TextBox>
        <Label Content="Password"/>
        <TextBox Name="txtPassword" FontSize="18" TextChanged="txtPassword_TextChanged"></TextBox>
        <Button Name ="btnLogin" Content="Login" Margin="60 10" Click="btnLogin_Click"></Button>
    </StackPanel>
</Window>
